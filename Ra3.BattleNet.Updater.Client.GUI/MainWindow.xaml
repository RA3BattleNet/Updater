<Window x:Class="Ra3.BattleNet.Updater.Client.GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ra3.BattleNet.Updater.Client.GUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="280" Width="405">
    <Grid Margin="0,0,0,-5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="219*"/>
            <ColumnDefinition Width="136*"/>
        </Grid.ColumnDefinitions>
        <CheckBox x:Name="CheckBox_Debug" Content="详细日志输出" HorizontalAlignment="Left" Margin="235,172,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.509,1.271" TabIndex="4" Grid.ColumnSpan="2"/>
        <TextBox x:Name="TextBox_LogFilePath" HorizontalAlignment="Left" Margin="233,150,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="135" MaxLines="1" TabIndex="3" Grid.ColumnSpan="2"/>
        <TextBox x:Name="TextBox_ClientPath" HorizontalAlignment="Left" Margin="233,56,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="135" MaxLines="1" TabIndex="2" Grid.ColumnSpan="2"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,151,0,0" TextWrapping="Wrap" Text="Log文件路径（留空不生成）" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,57,0,0" TextWrapping="Wrap" Text="待更新父目录路径" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,37,0,0" TextWrapping="Wrap" Text="服务器补丁包目录路径（非压缩包）" VerticalAlignment="Top"/>
        <TextBox x:Name="TextBox_PatchPath" HorizontalAlignment="Left" Margin="233,34,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="135" MaxLines="1" TabIndex="1" Grid.ColumnSpan="2"/>
        <Label Content="必选" HorizontalAlignment="Left" Margin="10,7,0,0" VerticalAlignment="Top"/>
        <Label Content="可选" HorizontalAlignment="Left" Margin="10,121,0,0" VerticalAlignment="Top"/>
        <Button x:Name="ApplyButton" Content="更新" Margin="81,200,0,0" HorizontalAlignment="Left" Width="39" Height="31" VerticalAlignment="Top" Grid.Column="1" Click="ApplyButton_Click" TabIndex="5"/>

    </Grid>
</Window>
